generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  NIK_Pasien       String      @id @unique
  Nama_Pasien      String
  Jenis_Kelamin    String
  Tanggal_Lahir    DateTime
  No_Telp          String
  Email            String      @unique
  Password         String
  Tanggal_Daftar   DateTime    @default(now())
  Transaksi_pasien Transaksi[]
}

model Transaksi {
  Id_Transaksi      Int      @id @default(autoincrement())
  Tanggal_Transaksi DateTime
  Harga             String
  User              User?    @relation(fields: [userNIK_Pasien], references: [NIK_Pasien])
  userNIK_Pasien    String?
}
